<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bt_fundo"

>
    <ImageView
            android:id="@+id/opcDep"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:padding="4dp"
    />


    <ImageView
            android:id="@+id/imgFundo"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentLeft="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="6dp"
            android:padding="8dp"

    />

    <TextView
            android:id="@+id/nome_dpto_list"
            android:textSize="28dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Exemplo"
            android:textColor="#212121"
            android:layout_toRightOf="@+id/imgFundo"
            android:layout_marginRight="9dp"
            android:layout_alignBottom="@+id/imgFundo"
            android:layout_marginBottom="-1dp" android:layout_marginLeft="-5dp"/>


</RelativeLayout>