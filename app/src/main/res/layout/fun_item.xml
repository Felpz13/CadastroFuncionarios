<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

>

    <ImageView
            android:id="@+id/foto"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentLeft="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"


    />

    <ImageView
            android:id="@+id/func_alterar"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:foregroundGravity="bottom"
            android:layout_toLeftOf="@+id/func_remover"
    />

    <ImageView
            android:id="@+id/func_remover"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:foregroundGravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
    />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/foto"
            android:layout_toLeftOf="@+id/func_alterar"
            android:layout_centerVertical="true"
    >

        <TextView
                android:id="@+id/rg_txt"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RG:"
                android:textColor="#212121"
                android:layout_below="@+id/nome_txt"
                android:layout_marginRight="4sp"
                android:layout_marginLeft="6sp"

        />

        <TextView
                android:id="@+id/rg"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:layout_toRightOf="@+id/nome_txt"
                android:textColor="#212121"
                android:layout_below="@+id/nome_fun"
                android:layout_marginRight="4sp"
                android:layout_marginLeft="6sp"

        />

        <TextView
                android:id="@+id/nome_txt"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textColor="#212121"
                android:layout_marginRight="4sp"
                android:layout_marginLeft="6sp"

        />

        <TextView
                android:id="@+id/nome_fun"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Exemplo"
                android:textColor="#212121"
                android:layout_toRightOf="@+id/nome_txt"
                android:layout_marginRight="4sp"
                android:layout_marginLeft="6sp"

        />

    </RelativeLayout>





</RelativeLayout>